<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Main2ActivityIP">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:text="Direccion IP"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layouthijo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textView1">

            <EditText
                android:id="@+id/o1"
                android:layout_width="56dp"
                android:layout_height="46dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <EditText
                android:id="@+id/o2"
                android:layout_width="59dp"
                android:layout_height="46dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toEndOf="@+id/o1"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <EditText
                android:id="@+id/o3"
                android:layout_width="62dp"
                android:layout_height="46dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toStartOf="@+id/o4"
                app:layout_constraintStart_toEndOf="@+id/o2"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <EditText
                android:id="@+id/o4"
                android:layout_width="63dp"
                android:layout_height="46dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toEndOf="@+id/o3"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="/"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <EditText
                android:id="@+id/sub"
                android:layout_width="58dp"
                android:layout_height="49dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/segundo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layouthijo1"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/noRedes"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#ffff"
                android:hint="No. de Subredes"
                android:selectAllOnFocus="true"
                android:singleLine="false"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/b1"
                style="@style/Animation.AppCompat.DropDownUp"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_marginTop="8dp"
                android:text="Listo"
                android:textColor="#5555"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginLeft="128dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="129dp"
                android:layout_marginRight="129dp"
                android:text="Llene todos los campos"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/b1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="12dp"
                android:text="Mascara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/val" />
            <TextView
                android:id="@+id/mr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorAccent"
            />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="Dirección inicial"
               />
            <TextView
                android:id="@+id/di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorAccent"
                />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Dirección final"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/di" />
            <TextView
                android:id="@+id/df"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorAccent" />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/segundo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TextViewRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>